<%- include("header") %>

<div class="box" id="heading">
  <h1><%= ListTitle %></h1>
</div>

<div class="box">
  <% for (var i = 0 ; i < items.length ;i++){ %>

  <div class="item">
    <input type="checkbox" />
    <p><%= items[i] %></p>
  </div>
  <% } %>

  <form action="/" method="POST">
    <!-- <label for="newItem">newItem</label> -->
    <input
      type="text"
      name="newItem"
      placeholder="To do item"
      autocomplete="off"
      required
      autofocus
    />
    <button type="submit" name="list" value=<%= ListTitle %>> + </button>
  </form>
</div>

<%- include("footer") %>
